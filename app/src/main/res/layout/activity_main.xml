<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/logo_trans"
    tools:context=".Login">

    <ImageView
        android:id="@+id/small_logo"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:contentDescription="@string/small_logo"
        android:translationX="250dp"
        android:translationY="225dp"
        app:srcCompat="@drawable/mechanic" />

    <ImageView
        android:id="@+id/main_logo"
        android:layout_width="320dp"
        android:layout_height="320dp"
        android:layout_centerInParent="true"
        android:contentDescription="@string/main_logo"
        android:transitionName="main_logo_trans"
        app:srcCompat="@drawable/forum_logo"
        tools:targetApi="lollipop" />

</RelativeLayout>